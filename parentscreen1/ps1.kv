<ParentScreen1>
  name:"parent_screen_1"
  email_field:email_field
  password_field:password_field
  password_flag_text:password_flag_text

  CanvasWidget:

  BoxLayout:
    orientation: 'vertical'
    FloatLayout:
      Label:
        text:"What Sticks"
        font_size: root.window_width * .1
        # font_size:60
        # pos_hint: {"x":0.2}
        pos_hint:{'x':0,'y':0}
        size_hint_y: None
        height: 140
    BoxLayout:
      orientation:"vertical"
      size_hint_x:None
      width:root.window_width * .9
      padding:(root.window_width*.05,0,0,0)#left,_,_,_
      spacing: root.window_height * .025
      MDTextField:
        id: email_field
        hint_text:"Email"
        icon_right:"email"
        icon_right_color:.2,.2,.2,1
        current_hint_text_color:.2,.2,.2,1
        text_color:0,0,0,1
        font_size:root.window_width * .06
        # size_hint_x:None
        # width:root.window_width * .8
        # width: 600
      MDTextField:
        id: password_field
        password:True
        hint_text: "Password"
        icon_right:"password"
        icon_right_color:.2,.2,.2,1
        current_hint_text_color:.2,.2,.2,1
        text_color:0,0,0,1
        font_size:root.window_width * .06
        # size_hint_x:None
        # width:root.window_width * .8
        # width:600
        # padding:(0,0,0,0)#_,top,_,_
        #padding in the things of the MDTextField

    BoxLayout:#Show Password Container
      size_hint_y: None
      height: root.window_height * .06
      #padding:(root.window_width*.15,0,0,0)#left,_,_,_
      MDCheckbox:
        size_hint: None, None
        # size: root.window_width * .05, root.window_height * .05
        size: root.window_width * .075,root.window_height * .06
        # pos_hint: {"center_x": .24}
        text_size: (100,0)
        on_active: root.show_password(*args)
      MDLabel:
        id: password_flag_text
        text: "Show Password"

    BoxLayout:#BottomButtonsContainer
      padding:(0,0,root.window_width * .075,0)#_,_,right,_

      AnchorLayout:
        anchor_x:"right"
        anchor_y:"top"

        BoxLayout:
          login_button:login_button
          exit_anchor_layout:exit_anchor_layout
          size_hint:None,None
          width: root.window_width * .5
          height:self.login_button.height + self.exit_anchor_layout.height
          orientation:"vertical"
          # padding:0
          # canvas.before:
          #   Color:
          #     rgb: [127/255,160/255,100/255]#wshKivy Blue
          #   Rectangle:
          #     pos: self.pos
          #     size: self.size
          MDFillRoundFlatButton:
            id:login_button
            font_size:root.window_width * .05
            md_bg_color: .1,.1,.1,1
            text:'Login'
            size_hint_x: 1
            on_press:
              root.login_button()

          AnchorLayout:
            id:exit_anchor_layout
            anchor_x:"right"
            anchor_y:"top"
            padding:(0,root.window_height * .05,0,0)#left,top,right,bottom
            MDFillRoundFlatButton:
              font_size:root.window_width * .05
              md_bg_color: .5,.5,.5,1
              text:'Exit'
              size_hint_x: .5
              on_press:
                app.get_running_app().stop()

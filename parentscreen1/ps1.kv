<FailBox>
  size:(400,300)
  size_hint:(None, None)
  pos_hint:{'x':.2,'y':.29}
  canvas.before:
    Color:
      rgba: .7,.7,.7,1
    RoundedRectangle:
      size: self.size
      pos: self.pos
  orientation: 'vertical'
  MDLabel:
    text:'Login Failed, check credentials'
    pos_hint: {"x":0.2}
    font_size:30
  Button:
    background_color:.9,0,0,1
    size_hint_x:.8
    pos_hint:{'center_x':.5}
    text: 'Close'
    on_release: root.parent.remove_widget(root)
  MDLabel:
    size_hint_x:.01

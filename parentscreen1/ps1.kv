<ParentScreen1>
  name:"parent_screen_1"
  # email_field:email_field
  password:password
  # password_text:password_text
  password_flag_text:password_flag_text

  CanvasWidget:
  BoxLayout:
    orientation: 'vertical'

    MDLabel:
      # text:'Dev Note: window size is ' +str(Window.size)
      pos_hint: {"x":0.0}
      size_hint_y: .5
      height: 40
    MDLabel:
      text:"What Sticks"
      font_size: "60dp"
      pos_hint: {"x":0.2}
      size_hint_y: None
      height: 140
    # EmailBox:
    MDTextField:
      # id: email_field
      hint_text: "Email"
      text: root.email_text
      icon_right: "email"
      icon_right_color:.2,.2,.2,1#works
      current_hint_text_color:.2,.2,.2,1#works label changes color
      text_color: 0,0,0,1#works text color
      size_hint_x: None
      width: 600
      font_size: "40dp"
      pos_hint: {"center_x":0.5}
    MDTextField:
      id: password
      hint_text: "Password"
      text: root.password_text
      icon_right: "password"
      icon_right_color:.2,.2,.2,1#works
      current_hint_text_color:.2,.2,.2,1#works label changes color
      text_color: 0,0,0,1#works text color
      # selection_color: 0, 0, 0, 1
      line_color_focus:0,0,0,1
      line_color_normal:0,0,0,1
      size_hint_x: None
      width: 600
      font_size: "40dp"
      pos_hint: {"center_x":0.5}
      password: True


    BoxLayout:
      # orientation: 'vertical'
      size_hint_y: None
      height: "48dp"
      MDCheckbox:
        size_hint: None, None
        size: "48dp", "48dp"
        pos_hint: {"center_x": .24}
        on_active: root.show_password(*args)
      MDLabel:
        id: password_flag_text
        text: "Show Password"
        # post_hint: {"center_x":.4}
        # size: "48dp", "48dp"
        # md_bg_color: .3,.3,.3,1
        # height: "48dp"

    BoxLayout:
      padding: (0,100)
      Label:
      BoxLayout:
        orientation:'vertical'
        MDFillRoundFlatButton:
          md_bg_color: 0,0,0,1
          text:'Login'
          size_hint_x: 1
          on_press:
            root.login_button()
            # app.MainScreenManager.screens.current="parent_screen_2"
        Label:
          size_hint_y: None
          height: 40
        MDFillRoundFlatButton:
          md_bg_color: .3,.3,.3,1
          text:'Exit'
          width: 50
          size_hint_x: None
          on_press:
            app.get_running_app().stop()
        Label:
          size_hint_x: .6
          height: 10


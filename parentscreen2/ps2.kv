<ParentScreen2>
  child_sm:child_sm
  act_screen_id:act_screen_id
  toolbar:toolbar
  CanvasWidget:
  MDToolbar:
    id: toolbar
    pos_hint: {"top": 1}
    elevation: 10
    title: "What-Sticks-Health"
    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
    md_bg_color: .3,.3,.3,1
  MDNavigationLayout:

    # x:toolbar.height-100
    ScreenManager:
      id: child_sm
      ActivityScreen:
        name:"act_screen"
        id:act_screen_id
        size_hint:1,None
        height:root.height - root.toolbar.size[1]
      TableScreen:
        name:"table_screen"
    MDNavigationDrawer:
      id:nav_drawer
      size_hint:.4,None
      height:root.height - root.toolbar.size[1]
      NavMenu:


<ActivityScreen>
  add_act_note:add_act_note
  add_act_note_label:add_act_note_label
  email_label:email_label
  add_act_name_label:add_act_name_label
  add_act_name:add_act_name
  BoxLayout:#ActivityScreen
    orientation:"vertical"
    BoxLayout:#TopPart of ActivityScreen
      size_hint:1,.4#x,y
      BoxLayout:
        orientation:"vertical"
        size_hint:.7,1
        AnchorLayout:
          anchor_x:"left"
          anchor_y:"top"
          BoxLayout:
            orientation:"vertical"
            Label:
              size_hint:None,None
              text: ' Add Activity Window'
              font_size: "40dp"
              size: self.texture_size
            Label:
              id:email_label
              size_hint:None,None
              text:"     "+"nickapeed@yahoo.com"
              font_size:"24dp"
              size: self.texture_size
              color: .2,.2,.2,1
            Label:
        BoxLayout:#Add Activity Name
          orientation:"vertical"
          padding:"20dp"
          Label:
            id:add_act_name_label
            text:"Add Activity Name"
            size_hint:None,None
            size: self.texture_size
            font_size:"30dp"
          TextInputAddName:
            id:add_act_name
            rows:1
            size_hint:1,None
            font_size:"24dp"
            height:str(self.font_size * 2)+"dp"
          Label:



      BoxLayout:#Column 2 on Add Activity Top
        orientation:"vertical"
        size_hint:.3,1
        Button:
          text:"get label size"
          on_press:
            root.get_label_size()
        Button:
          text:"resize label"
          on_press:
            root.resize_label_size()

    BoxLayout:#Add Activity Note
      orientation:"vertical"
      size_hint:1,.6
      padding: 10
      BoxLayout:
        orientation:"vertical"
        BoxLayout:
          size_hint: 1,.1
          Label:
            id:add_act_note_label
            text:"Activity Note"
            size_hint: .3,1
            font_size: "30dp"
          Label:
            size_hint:.8,1
        TextInputTextSize:
          id:add_act_note
          size_hint: 1,.9

      # BoxLayout:





<TextInputTextSize>:
  textInputMultiline: txt_input_multiline
  canvas.before:
    Color:
      rgb: [127/255,160/255,189/255]#wshKivy Blue

    Rectangle:
      pos: self.pos
      size: self.size
  orientation: "vertical"
  GridLayout:
    cols: 1
    canvas.before:
      Rectangle:
        pos: self.pos
        size: self.size
    TextInputSpecial:
      id: txt_input_multiline
      text: "Bienvenue au Cercle International De L'ARC  \n conversataions en Fran√ßais"
      font_size: "24dp"
      size_hint_y: None
      height: (len(txt_input_multiline._lines)+1) * txt_input_multiline.line_height


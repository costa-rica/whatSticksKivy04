<ParentScreen2>
  name:"parent_screen_2"
  child_sm:child_sm
  act_screen_id:act_screen_id
  toolbar:toolbar
  CanvasWidget:
  MDToolbar:
    id: toolbar
    pos_hint: {"top": 1}
    elevation: 10
    title: "What-Sticks-Health"
    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
    md_bg_color: .3,.3,.3,1
    # font_size:root.width * .06
    # font_size:100
  MDNavigationLayout:
    # x:toolbar.height-100
    ScreenManager:
      id: child_sm
      ActivityScreen:
        name:"act_screen"
        id:act_screen_id
        size_hint:1,None
        height:root.height - root.toolbar.size[1]
      TableScreen:
        name:"table_screen"
    MDNavigationDrawer:
      id:nav_drawer
      size_hint:.4,None
      height:root.height - root.toolbar.size[1]
      NavMenu:


<TableScreen>
  GridLayout:
    rows:3
    Label:
      text:"Table Screen"
    Button:
      text:"I do nothing"


<NavMenu>
  # md_bg_color: 1,0,0,1
  spacing:10
  # padding:(0,600)
  orientation:"vertical"
  # size_hint: .1, .9
  # CanvasWidget:
  OneLineListItem:
    # text:"[size=50]Add Activity[/size]"
    text:"Add Activity"
    # font_size:root.width * .06
    # font_size:100
    on_press:
      root.parent.parent.parent.child_sm.current="act_screen"
    # CanvasWidget:
  OneLineListItem:
    # font_size:root.width * .06
    text:"View Logged Activties"
    on_press:
      root.parent.parent.parent.child_sm.current="table_screen"

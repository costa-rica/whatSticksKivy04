<ActivityScreen>
  box_act_screen:box_act_screen
  box_act_extra:box_act_extra
  ScrollView:
    BoxLayout:
      orientation:"vertical"
      size_hint: 1,None
      height:self.minimum_height
      BoxLayoutActScreen:
        id:box_act_screen
      BoxLayoutExtra:
        id:box_act_extra

<BoxLayoutActScreen>:#ActivityScreen
  act_screen_screen_name:act_screen_screen_name
  act_name_box:act_name_box
  box_date_and_time:box_date_and_time
  act_note_box:act_note_box

  orientation:"vertical"
  size_hint:1,None
  # height: root.parent.parent.parent.height - 200
  height: 842
  #above changes height to 842
  #set this BoxLayout height to ps2 height - toolbar, everything in this will be good
  BoxLayout:#TopPart of ActivityScreen
    size_hint:1,.4#x,y
    BoxLayout:#TopPart Left
      orientation:"vertical"
      size_hint:.7,1
      AnchorLayout:
        anchor_x:"left"
        anchor_y:"top"
        BoxLayoutScreenName:#Add Activity Screen Title Here
          id:act_screen_screen_name
      BoxLayoutActName:#Add Activity InputBox Here
        id: act_name_box
        # padding:(10,0,0,30)
    # BoxLayoutDateAndTime:#Column 2 on Add Activity Top
    #   id:box_date_and_time

  BoxLayoutAddActNote:#Add Activity Note
    id:act_note_box
  BoxLayoutDateAndTime:#Column 2 on Add Activity Top
    id:box_date_and_time
  # Button:
  #   size_hint:1,None
  #   height: 100
  #   text:"box_act_screen"
  #   on_press:
  #     print('box_act_screen.height:::', root.height)
  #     print('find ps2:',root.parent.children)


<BoxLayoutExtra@BoxLayout>:#Extra BoxLayout at bottom of BoxLayout ActScreen
  size_hint:1,None
  height: 1

<BoxLayoutScreenName>:#TopLeftAddAct
  add_act_name_label:add_act_name_label
  email_label:email_label
  orientation:"vertical"
  # padding_y:"40dp"
  padding:(0,0,0,0)#left,top,right,bottom
  Label:
    id:add_act_name_label
    size_hint:None,None
    text: 'Add Activity Window'
    size: self.texture_size

  Label:
    id:email_label
    size_hint:None,None
    font_size:"24dp"
    size: self.texture_size
    color: .2,.2,.2,1
    # padding:(25,0,0,0)
  Label:

<BoxLayoutActName@BoxLayout>:#Add Activity Name
  add_act_name_label:add_act_name_label
  add_act_name:add_act_name
  orientation:"vertical"
  # padding:"20dp"
  Label:
  Label:
    id:add_act_name_label
    text:"Add Activity Name"
    size_hint:None,None
    size: self.texture_size
    font_size:"30dp"
    color:.3,.3,.3,1
  TextInputAddName:
    id:add_act_name
    rows:1
    size_hint:1,None
    font_size:"24dp"
    height:str(self.font_size * 2)+"dp"


<BoxLayoutActNote@BoxLayout>:#ActivityNote
  textInputMultiline: txt_input_multiline
  canvas.before:
    Color:
      rgb: [127/255,160/255,189/255]#wshKivy Blue
    Rectangle:
      pos: self.pos
      size: self.size
  orientation: "vertical"
  GridLayout:
    cols: 1
    canvas.before:
      Rectangle:
        pos: self.pos
        size: self.size
    TextInputDynamicActNote:
      id: txt_input_multiline
      # text: "Bienvenue au Cercle International De L'ARC  \n conversataions en Fran√ßais"
      font_size: "24dp"
      size_hint_y: None
      height: (len(txt_input_multiline._lines)+1) * txt_input_multiline.line_height

<BoxLayoutAddActNote@BoxLayout>:
  add_act_note_label:add_act_note_label
  add_act_note:add_act_note
  orientation:"vertical"
  size_hint:1,.6
  padding: 10
  BoxLayout:
    orientation:"vertical"
    BoxLayout:
      size_hint: 1,.1
      Label:
        id:add_act_note_label
        text:"Activity Note"
        size_hint: .3,1
        font_size: "30dp"
        color:.3,.3,.3,1
      Label:
        size_hint:.8,1
    BoxLayoutActNote:
      id:add_act_note
      size_hint: 1,.9

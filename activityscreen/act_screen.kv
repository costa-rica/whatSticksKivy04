<BoxLayoutActName@BoxLayout>:#Add Activity Name
  add_act_name_label:add_act_name_label
  add_act_name:add_act_name
  orientation:"vertical"
  # padding:"20dp"
  Label:
  Label:
    id:add_act_name_label
    text:"Add Activity Name"
    size_hint:None,None
    size: self.texture_size
    font_size:"30dp"
    color:.3,.3,.3,1
  TextInputAddName:
    id:add_act_name
    rows:1
    size_hint:1,None
    font_size:"24dp"
    height:str(self.font_size * 2)+"dp"

<BoxLayoutActNote@BoxLayout>:#ActivityNote
  textInputMultiline: txt_input_multiline
  canvas.before:
    Color:
      rgb: [127/255,160/255,189/255]#wshKivy Blue
    Rectangle:
      pos: self.pos
      size: self.size
  orientation: "vertical"
  GridLayout:
    cols: 1
    canvas.before:
      Rectangle:
        pos: self.pos
        size: self.size
    TextInputDynamicActNote:
      id: txt_input_multiline
      # text: "Bienvenue au Cercle International De L'ARC  \n conversataions en Fran√ßais"
      font_size: "24dp"
      size_hint_y: None
      height: (len(txt_input_multiline._lines)+1) * txt_input_multiline.line_height

